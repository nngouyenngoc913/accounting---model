            const container = document.querySelector('.journal-panel .journal-entries .entry-list');
            
            if (transactions.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div style="font-size: 2rem; margin-bottom: 10px;">üìù</div>
                        <div>Ch∆∞a c√≥ giao d·ªãch n√†o</div>
